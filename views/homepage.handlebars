<!-- Loop over each object in the post array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-5">
    <h2>
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    <p>
      {{post.description}}
    </p>
  </div>
  <div class="col-md-7">
    <p>Posted by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
</div>
{{/each}}
