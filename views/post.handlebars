<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>Posted by {{user.name}} on {{format_date date_created}}</p>
  <p>
    <button class="btn btn-primary" id="comment-button">Comment on this post!</button>
  </p>
  <form id="comment-form" style="display: none;">
    <textarea id="comment-text" rows="4" cols="50" placeholder="Write your comment here..."></textarea>
    <button class="btn btn-primary" type="submit">Submit Comment</button>
  </form>
  <div id="comments-container">
    {{#each comments}}
      <div class="comment">
        <p>{{this.comment_text}}</p>
        <p><small>Posted by {{this.user.name}} on {{format_date this.createdAt}}</small></p>
      </div>
    {{/each}}
  </div>
</div>
<script src="/js/comment.js"></script>
